<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:background="@color/light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/light_background">

        <!-- Fila superior: Cliente y Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Nombre del cliente -->
            <TextView
                android:id="@+id/tv_cliente_nombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gasolinera_los_andes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- Estado -->
            <TextView
                android:id="@+id/tv_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmada"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/estado_confirmada_background"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Tipo de servicio y agendamiento -->
        <TextView
            android:id="@+id/tv_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calibraci_n_de_surtidores_emergencia"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <!-- Fecha y Hora -->
        <TextView
            android:id="@+id/tv_fecha_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/septiembre_11_10_00_am"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- Costo -->
        <TextView
            android:id="@+id/tv_costo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_150_000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/vinoTinto"
            android:layout_marginBottom="8dp" />

        <!-- Email del cliente -->
        <TextView
            android:id="@+id/tv_cliente_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/andes_gasolineras_com"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Indicador de toque -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toca_para_gestionar"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>