<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/formulario_agendamiento_titulo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="@color/black" />

        <!-- Información del servicio seleccionado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp"
            android:background="@color/light_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/light_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resumen_servicio"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_servicio_seleccionado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Servicio: "
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_tipo_seleccionado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo: "
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Campo Fecha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fecha"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_fecha"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <!-- Campo Hora -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hora"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_hora"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <!-- Campo Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descripcion_opcional"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="@string/hint_descripcion"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/btn_confirmar_agendamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirmar_cita"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/vinoTinto"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>