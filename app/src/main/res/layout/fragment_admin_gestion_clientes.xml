<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Clientes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black" />

    <!-- Contador -->
    <TextView
        android:id="@+id/tv_contador_clientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_0_clientes"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- Lista de clientes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_clientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Mensaje cuando no hay clientes -->
    <TextView
        android:id="@+id/tv_sin_clientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_hay_clientes_registrados"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/black" />

</LinearLayout>