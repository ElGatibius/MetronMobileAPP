<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel de Administración"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black" />

        <!-- Tarjetas de estadísticas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadísticas Generales"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Total Citas -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/light_background">

                    <TextView
                        android:id="@+id/tv_total_citas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/vinoTinto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Citas Totales"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Ingresos -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/light_background">

                    <TextView
                        android:id="@+id/tv_ingresos_totales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$3.250.000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/vinoTinto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingresos Totales"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Segunda fila de estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Citas Emergencia -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/light_background">

                    <TextView
                        android:id="@+id/tv_citas_emergencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/vinoTinto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Citas Emergencia"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Citas Preventivo -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/light_background">

                    <TextView
                        android:id="@+id/tv_citas_preventivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/vinoTinto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Citas Preventivo"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Acciones Rápidas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acciones Rápidas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <!-- Botones de acciones -->
        <Button
            android:id="@+id/btn_gestion_citas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Citas"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/vinoTinto"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_calendar_home" />

        <Button
            android:id="@+id/btn_gestion_clientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Clientes"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/vinoTinto"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_users" />

        <Button
            android:id="@+id/btn_reportes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generar Reportes"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/vinoTinto"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_reportes" />

    </LinearLayout>

</ScrollView>