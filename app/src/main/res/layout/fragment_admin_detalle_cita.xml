<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_de_cita_administraci_n"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black" />

        <!-- Información de la cita -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            android:background="@color/light_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/light_background">

                <!-- Estado actual -->
                <TextView
                    android:id="@+id/tv_estado_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estado_pendiente"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/estado_pendiente_background"
                    android:textColor="@android:color/white" />

                <!-- Información del cliente -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/informaci_n_del_cliente"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_cliente_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gasolinera_los_andes"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_cliente_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/andes_gasolineras_com"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="16dp" />

                <!-- Detalles de la cita -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detalles_de_la_cita"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_tipo_servicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calibraci_n_de_surtidores"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_tipo_agendamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emergencia"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_fecha_hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/septiembre_11_10_00_am"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <!-- Ubicación -->
                <TextView
                    android:id="@+id/tv_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eds_suba"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descripci_n"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/problema_con_la_medici_n_en_surtidor_3"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Costo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/costo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_costo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_150_000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/vinoTinto" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Cambiar Estado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cambiar_estado"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_confirmar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/confirmar"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_completar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/completar"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancelar"
                android:layout_marginStart="4dp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Acciones administrativas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acciones_administrativas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_contactar_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contactar_al_cliente"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/vinoTinto"
            android:textColor="@android:color/white"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_email" />

        <Button
            android:id="@+id/btn_editar_costo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editar_costo"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/vinoTinto"
            android:textColor="@android:color/white"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_editar_perfil" />

        <Button
            android:id="@+id/btn_eliminar_cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eliminar_cita"
            android:backgroundTint="#D32F2F"
            android:textColor="@android:color/white"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_delete" />

    </LinearLayout>

</ScrollView>