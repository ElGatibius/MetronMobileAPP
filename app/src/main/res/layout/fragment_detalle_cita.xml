<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle de la cita"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="@color/black" />

        <!-- Información de la cita -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            android:background="@color/light_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/light_background">

                <!-- Tipo de agendamiento -->
                <TextView
                    android:id="@+id/tv_detalle_tipo_agendamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergencia"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/vinoTinto" />

                <!-- Fecha y Hora -->
                <TextView
                    android:id="@+id/tv_detalle_fecha_hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Septiembre 11 - 10:00 AM"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp" />

                <!-- Tipo de servicio -->
                <TextView
                    android:id="@+id/tv_detalle_servicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calibración de surtidores"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp" />

                <!-- Ubicación -->
                <TextView
                    android:id="@+id/tv_detalle_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDS Suba"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tv_detalle_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Problema con la medición en surtidor #3"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Costo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costo de la visita:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tv_detalle_costo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$150.000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/vinoTinto"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Botón Cancelar -->
            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <!-- Botón Reagendar -->
            <Button
                android:id="@+id/btn_reagendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reagendar"
                android:backgroundTint="@color/vinoTinto"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>